<div class="page-wrap">
<div class="center-form">
	<%= @post.title %><br>
	<%= @post.body %>

	<h2>Comments</h2>
	<%= render @post.comments %>

	<% if current_user %>
		<h4>New Comment</h4>

		<%= form_for [@post, @post.comments.build] do |f| %>
			<div class='field'>
				<%= f.label :author %><br>
				<%= f.text_field :author, :value => @user.name, :readonly => true %>
			</div>
			<div class='field'>
				<%= f.label :body %><br>
				<%= f.text_area :body %>
			</div>
				<div class='actions'>
				<%= f.submit %>
			</div>
		<% end %>
	<% end %>
	</div>
	</div>