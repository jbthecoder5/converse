<div class="page-wrap">
<div class="center-form">
	<div class="posts-container">
		<div class="post-title">
			<h2><%= @post.title.capitalize %></h2>
		</div>
		<div class="post-body">
			<%= @post.body %>
		</div>
	</div>
	<h2>Comments</h2>
	<%= render @post.comments %>

	<% if current_user %>
		<h4>Create a comment!</h4>

		<%= form_for [@post, @post.comments.build] do |f| %>
			<div class='field'>
				<%= f.label :author %><br>
				<%= f.text_field :author, :value => @user.name, :readonly => true %>
			</div>
			<div class='field'>
				<%= f.label :body %><br>
				<%= f.text_area :body %>
			</div>
				<div class='actions'>
				<%= f.submit %>
			</div>
		<% end %>
	<% end %>
	</div>
	</div>