<div class="page-wrap">
<div class="center-form">
<div class="form-main">
	<%= form_for(@post) do |f| %>
		<p><b>Current User:</b> <%= @user.name %></p>
		<p><b>Current Time:</b> <%= @user.created_at %></p>
		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :body %>
			<%= f.text_area :body, class: "form-control" %>
		</div>
		<%= f.submit "Create Post", class: "btn btn-primary" %>
	<% end %>
</div>
</div>
</div>